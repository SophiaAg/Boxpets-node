<% let classeErro={ 
   "nome" :"", "cpf" :"", "cnpj" :"", "email" :"", "celular" :"", "senha" :"", "razaosocial"
   :"", "especialidades" :"", "nomeempresa" :"", "cep" :"", "uf" :"", "logradouro" : "" , "cidade" :"", "bairro"
   :"", "numero" :"", } 
   
   let msgErro={ "nome" :"", "cpf" :"", "cnpj" :"", "email" :"", "celular" :"", "senha"
   :"", "razaosocial" :"", "especialidades" :"", "nomeempresa" :"", "cep" :"", "uf" :"", "logradouro" : "" , "cidade"
   :"", "bairro" :"", "numero" :"", } 
   
   if(errors){ 
      errors.errors.forEach(function(erro){ 
      classeErro[erro.path]='invalido'; 
      msgErro[erro.path]=erro.msg 
   }) } %>


<div class="box">
    <div class="progress-bar">
       <div class="step">
          <p>
             Name
          </p>
          <div class="bullet">
             <span>1</span>
          </div>
          <div class="check fas fa-check"></div>
       </div>
       <div class="step">
          <p>
             Contact
          </p>
          <div class="bullet">
             <span>2</span>
          </div>
          <div class="check fas fa-check"></div>
       </div>
       <div class="step">
          <p>
             Birth
          </p>
          <div class="bullet">
             <span>3</span>
          </div>
          <div class="check fas fa-check"></div>
       </div>
       <div class="step">
          <p>
             Submit
          </p>
          <div class="bullet">
             <span>4</span>
          </div>
          <div class="check fas fa-check"></div>
       </div>
    </div>


    <div class="form-outer">
       <form action="/cadastrarEmpresa" method="post">

          <div class="page slide-page">
             <div class="title-info">

                <h1>Informações da Empresa</h1>
                <p>Preencha as informações da Empresa</p>
             </div>


             <section class=" input-field <%= classeErro.nomeempresa %>">
                <i class="fas fa-user"></i>
                <input id="nomeempresa" name="nomeempresa" required type="text" placeholder="<%= msgErro.nomeempresa ? msgErro.nomeempresa : 'Nome da Empresa' %>"
                value="<%= msgErro.nomeempresa ? '' : (valores.nomeempresa || '') %>" />    
             </section>

             <section class="input-field <%= classeErro.email %>">
                <i class="fas fa-envelope"></i>
                <input name="email" id="email"  type="text"   placeholder="<%= msgErro.email ? msgErro.email : 'Email' %>"
                value="<%= msgErro.email ? '' : (valores.email || '') %>" />
             </section>

             <section class="input-field <%= classeErro.celular %>">
               <i class="fa-solid fa-phone"></i>
               <input name="celular" id="celular" required type="celular"  placeholder="<%= msgErro.celular ? msgErro.celular : 'Celular' %>"
               value="<%= msgErro.celular ? '' : (valores.celular || '') %>" />
             </section>

             <div class="field">
                <span class="firstNext next">Next</span>
             </div>
          </div>

          <div class="page">
             <div class="title-info">

                <h1>Informações da Empresa</h1>
                <p>Preencha as informações da Empresa</p>
             </div>


             <section class=" input-field <%= classeErro.cnpj %>">
               <i class="fa-solid fa-caret-up"></i>
               <input id="cnpj" name="cnpj" required type="text" placeholder="<%= msgErro.cnpj ? msgErro.cnpj : 'CNPJ' %>"
               value="<%= msgErro.cnpj ? '' : (valores.cnpj || '') %>" />
             </section>

             <section class="input-field <%= classeErro.razaosocial %>">
               <i class="fa-solid fa-caret-up"></i>
                <input id="razaosocial" name="razaosocial" required type="text" placeholder="<%= msgErro.razaosocial ? msgErro.razaosocial : 'Razão Social' %>"
               value="<%= msgErro.razaosocial ? '' : (valores.razaosocial || '') %>" />
             </section>

             <section class="input-field <%= classeErro.especialidades %>">
                <i class="fas fa-user"></i>
                <select id="especialidades" name="especialidades" required type="text"
                   placeholder="Especialidades">
                   <% if(especialidades){ especialidades.forEach(function(especi){ %>
                      <option value="<%= especi.ID_ESPECIALIDADES %>">
                         <%= especi.ESPECIALIDADES %>
                      </option>
                      <% }) } %>
                </select>

             </section>

             <div class="field btns">
                <span class="prev-1 prev">Previous</span>
                <span class="next-1 next">Next</span>
             </div>
          </div>

          <div class="page">

             <div class="title-info">
                <h1>Endereço da Loja</h1>
                <p>Preencha as informações de endereço da sua loja.</p>
             </div>


             <section class=" input-field <%= classeErro.cep %>">
               <i class="fa-solid fa-caret-up"></i>
               <input id="cep" name="cep" required type="text" placeholder="<%= msgErro.cep ? msgErro.cep : 'CEP' %>"
               value="<%= msgErro.cep ? '' : (valores.cep || '') %>" />
             </section>

             <section class="input-field <%= classeErro.uf %>">
               <i class="fa-solid fa-caret-up"></i>
               <input id="uf" name="uf" required type="text" placeholder="<%= msgErro.uf ? msgErro.uf : 'UF' %>"
               value="<%= msgErro.uf ? '' : (valores.uf || '') %>" />
             </section>

             <section class="input-field <%= classeErro.cidade %>">
                 <i class="fa-solid fa-caret-up"></i>
               <input id="cidade" name="cidade" required type="text" placeholder="<%= msgErro.cidade ? msgErro.cidade : 'Cidade' %>"
               value="<%= msgErro.cidade ? '' : (valores.cidade || '') %>" />
             </section>

             <section class="input-field <%= classeErro.bairro %>">
               <i class="fa-solid fa-caret-up"></i>
               <input id="bairro" name="bairro" required type="text" placeholder="<%= msgErro.bairro ? msgErro.bairro : 'Bairro' %>"
               value="<%= msgErro.bairro ? '' : (valores.bairro || '') %>" />
             </section>

             <section class="input-field <%= classeErro.logradouro %>">
               <i class="fa-solid fa-caret-up"></i>
               <input id="logradouro" name="logradouro" required type="text" placeholder="<%= msgErro.logradouro ? msgErro.logradouro : 'Logradouro' %>"
               value="<%= msgErro.logradouro ? '' : (valores.logradouro || '') %>" />
             </section>


             <div class="field btns">
                <span class="prev-2 prev">Previous</span>
                <span class="next-2 next">Next</span>
             </div>
          </div>

          <div class="page">

             <div class="title-info">
                <h1>Informação do responsável</h1>
                <p>Preencha as informações suas informações</p>
             </div>


             <section class=" input-field <%= classeErro.nome %>">

                <i class="fas fa-user"></i>
                <input id="nome" name="nome" required type="text" placeholder="<%= msgErro.nome ? msgErro.nome : 'Digite seu nome' %>"
                value="<%= msgErro.nome ? '' : (valores.nome || '') %>" />
             </section>

             <section class="input-field <%= classeErro.cpf %>">

                <i class="fas fa-user"></i>
                <input id="cpf" name="cpf" required type="text" placeholder="<%= msgErro.cpf ? msgErro.cpf : 'CPF' %>"
                value="<%= msgErro.cpf ? '' : (valores.cpf || '') %>" />
             </section>

             <section class="input-field <%= classeErro.senha %>">

                <i class="fas fa-lock"></i>
                <input id="senha" name="senha" required type="password" placeholder="<%= msgErro.senha ? msgErro.senha : 'Crie uma senha' %>"
                value="<%= msgErro.senha ? '' : (valores.senha || '') %>" />

             </section>



             <div class="field btns">
                <span class="prev-3 prev">Previous</span>
                <button class="submit" type="submit">Submit</button>
             </div>
          </div>
       </form>


    </div>

    <div class="Caminhologar">
      <h1>Já possui uma conta comercial aqui? <span><a href="/loginEmpresa">Entrar</a></span></h1>
    </div>
 </div>

 